<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imgAnhSVitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvNgaySinhitem"/>

    <TextView
        android:id="@+id/tvMaSVitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Ma SV:"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imgAnhSVitem"/>
    <TextView
        android:id="@+id/tvTenSVitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Ten SV:"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvMaSVitem"
        app:layout_constraintLeft_toRightOf="@id/imgAnhSVitem"/>
    <TextView
        android:id="@+id/tvMaLopitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Ma Lop:"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvTenSVitem"
        app:layout_constraintLeft_toRightOf="@id/imgAnhSVitem"/>
    <TextView
        android:id="@+id/tvDiaChiitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Dia Chi:"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvMaLopitem"
        app:layout_constraintLeft_toRightOf="@id/imgAnhSVitem"/>
    <TextView
        android:id="@+id/tvNgaySinhitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="Ngay Sinh:"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/tvDiaChiitem"
        app:layout_constraintLeft_toRightOf="@id/imgAnhSVitem"/>


</androidx.constraintlayout.widget.ConstraintLayout>