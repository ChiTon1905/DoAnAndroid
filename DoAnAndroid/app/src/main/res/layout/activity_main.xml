<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvDoAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Do An Android"
        android:textColor="#000000"
        android:textSize="14pt"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btnQLSV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quan Ly Sinh Vien"
        android:textSize="13pt"
        app:layout_constraintTop_toBottomOf="@id/tvDoAn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btnQLLop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quan Ly Lop"
        android:textSize="13pt"
        app:layout_constraintTop_toBottomOf="@id/btnQLSV"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/btnThemLop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Them Lop"
        android:textSize="14pt"
        app:layout_constraintTop_toBottomOf="@id/btnQLLop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>